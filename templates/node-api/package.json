{
  "name": "node-api",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "start": "node index.js",
    "dev": "ts-node-dev -r dotenv/config --respawn --transpileOnly src/index.ts",
    "build": "tsc && cp package.json build/",
    "typeorm": "ts-node ./node_modules/typeorm/cli -f ./src/configs/databaseConfig.ts",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "tsc --noEmit && eslint \"src/**/*.{js,ts,tsx}\" --max-warnings=0",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "schema:diff": "graphql-inspector diff ./schema.gql ./src/generated/schema.gql"
  },
  "dependencies": {
    "apollo-server": "^2.13.1",
    "class-validator": "^0.12.2",
    "firebase-admin": "^9.0.0",
    "graphql": "^15.0.0",
    "joi": "^17.2.0",
    "pg": "^8.2.1",
    "reflect-metadata": "^0.1.13",
    "type-graphql": "^1.0.0-rc.1",
    "typedi": "^0.8.0",
    "typeorm": "^0.2.24",
    "typeorm-typedi-extensions": "^0.2.3"
  },
  "devDependencies": {
    "@graphql-inspector/cli": "^2.1.0",
    "@types/joi": "^14.3.4",
    "@types/node": "^14.0.27",
    "@typescript-eslint/eslint-plugin": "^3.0.2",
    "@typescript-eslint/parser": "^3.0.2",
    "dotenv": "^8.2.0",
    "eslint": "^7.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "prettier": "^2.0.5",
    "ts-node-dev": "^1.0.0-pre.44",
    "typescript": "^3.9.2"
  }
}
